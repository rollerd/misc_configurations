# Prod
Host <PROD BASTION>
    IdentityFile ~/.ssh/id_rsa
    User ec2-user
    StrictHostKeyChecking no

Host 10.60.*
    User ec2-user
    StrictHostKeyChecking no
    ProxyCommand ssh -T -o 'ForwardAgent yes' <PROD BASTION> 'ssh-add -t 10 /home/ec2-user/.ssh/<REMOTE>.pem && nc %h %p'

# Staging
Host <STAGING BASTION>
    IdentityFile ~/.ssh/id_rsa
    User ec2-user
    StrictHostKeyChecking no

Host 10.50.*
    User ec2-user
    StrictHostKeyChecking no
    ProxyCommand ssh -T -o 'ForwardAgent yes' <STAGING BASTION> 'ssh-add -t 10 /home/ec2-user/.ssh/<REMOTE>.pem && nc %h %p'

# Dev
Host <DEV BASTION>
    IdentityFile ~/.ssh/id_rsa
    User ec2-user
    StrictHostKeyChecking no

Host 10.80.*
    User ec2-user
    StrictHostKeyChecking no
    ProxyCommand ssh -T -o 'ForwardAgent yes' <DEV BASTION> 'ssh-add -t 10 /home/ec2-user/.ssh/<REMOTE>.pem && nc %h %p'
